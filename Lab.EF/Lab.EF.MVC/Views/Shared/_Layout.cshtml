<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding-top:unset; padding-bottom:unset">
    <div class="navbar navbar-expand-lg navbar-dark bg-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        @Html.ActionLink("Mis Entidades", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-link navbar-brand">@Html.ActionLink("Casa", "Index", "Home", new { area = "" }, new { @class = "nav-link active" })</li>
                <li class="nav-link navbar-brand">@Html.ActionLink("Regiones", "Index", "Region", new { area = "" }, new { @class = "nav-link active" })</li>
                <li class="nav-link navbar-brand">@Html.ActionLink("Categorias", "Index", "Categories", new { area = "" }, new { @class = "nav-link active" })</li>
                <li class="nav-link navbar-brand">@Html.ActionLink("Empleados", "Index", "Employees", new { area = "" }, new { @class = "nav-link active" })</li>
            </ul>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <br>
        <footer class="text-center">
            <p>&reg; @(DateTime.Now.Year+991) - The Northwind Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
