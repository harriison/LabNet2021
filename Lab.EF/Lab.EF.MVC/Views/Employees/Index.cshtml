@model List<Lab.EF.MVC.Models.EmployeesView>

@{
    ViewBag.Title = "Empleados";
}

<h1>Empleados</h1>

<div style="margin-bottom:20px;">
    @Html.ActionLink("Agregar Empleado", "Insert", new { area = "" }, new { @class = "btn btn-primary" })
</div>

<table class="table table-striped table-dark rounded-lg table-borderless">
    <thead>
        <tr>
            <th scope="col">Identificacion</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <th scope="row">@employee.EmployeeID</th>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>
                    @Html.ActionLink("Borrar", "Delete", new { id = employee.EmployeeID }, new { @class = "btn btn-danger" })
                    @Html.ActionLink("Editar", "Edit", new { id = employee.EmployeeID }, new { @class = "btn btn-info" })
                </td>
            </tr>
        }
    </tbody>
</table>



