@model List<Lab.EF.MVC.Models.CategoriesView>

@{
    ViewBag.Title = "Categorias";
}

<h1>Categorias</h1>

<div style="margin-bottom:20px;">
    @Html.ActionLink("Agregar categoria", "Insert", new { area = "" }, new { @class = "btn btn-primary" })
</div>

<table class="table table-striped table-dark rounded-lg table-borderless">
    <thead>
        <tr>
            <th scope="col">Identificacion</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
        <tr>
            <th scope="row">@category.CategoryID</th>
            <td>@category.CategoryName</td>
            <td>@category.Description</td>
            <td>
                @Html.ActionLink("Borrar", "Delete", new { id = category.CategoryID }, new { @class = "btn btn-danger" })
                @Html.ActionLink("Editar", "Edit", new { category.CategoryID, category.CategoryName, category.Description }, new { @class = "btn btn-info" })
            </td>
        </tr>
        }
    </tbody>
</table>



